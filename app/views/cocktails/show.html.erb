<div class="container">
<h1><%= @cocktail.name %></h1>

<% @cocktail.doses.each do |dose| %>
<li><%= dose.description %> <%= dose.ingredient.name %><%= link_to ' > Destroy ingredient', cocktail_dose_path(@cocktail, dose), method: :delete, data: { confirm: 'Are you sure?' } %></li>
<% end %>
<hr>
<%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %>
<hr>
<%= link_to 'Destroy cocktail', cocktail_path(@cocktail), method: :delete, data: { confirm: 'Are you sure?' } %>
<hr>
<%= link_to "Go back to cocktails", cocktails_path %>
</div>
